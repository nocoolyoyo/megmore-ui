{
  "extends": "../../tsconfig",
  "paths": {
    "@/*": [
      "./src/*"
    ]
  },
  "compilerOptions": {
//    "locale": "zh-cn",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./lib-ts",
    "noLib": false,
    "lib": ["dom", "es6", "es2017"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./dist/**/*.ts"
  ]
}
